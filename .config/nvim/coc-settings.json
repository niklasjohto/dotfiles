{
  "languageserver": {
    "lua": {
      "command": "~/.local/share/nvim/lua-language-server/bin/lua-language-server",
      "rootPatterns": [".git"],
      "filetypes": ["lua"],
      "settings": {
        "Lua": {
          "diagnostics": {
            "globals": ["vim"]
          }
        }
      }
    },
    "clangd": {
      "command": "clangd",
      "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
    }
  }
}
